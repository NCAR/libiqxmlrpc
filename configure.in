  [  --enable-debug   enables adding debug info into binaries],
  [CXXFLAGS="$CXXFLAGS -g"] )

INCLUDES="$INCLUDES `pkg-config --cflags libxml++-1.0`"
LDFLAGS="$LDFLAGS `pkg-config --libs libxml++-1.0`"

AC_SUBST(CXXFLAGS)
